<body id="bodyVentanaPrincipal">
    <div id="myCarousel" class="carousel slide" data-bs-touch="false">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">

            <div class="carousel-item active">
                <!-- Imagen de fondo -->
                <img src="" alt="" id="pelicula1Carousel">
                <!-- Contenido del carousel-item -->
                <div class="carousel-caption text-start">
                    <h1 id="tituloPelicula1Carousel" class="tituloCarouselIndex"></h1>
                    <button id="botonPelicula1" class="button botonCarousel"><strong>Ver ahora</strong></button>
                </div>
            </div>

            <div class="carousel-item">
                <img src="" alt="" id="pelicula2Carousel">
                <div class="carousel-caption text-start">
                    <h1 id="tituloPelicula2Carousel" class="tituloCarouselIndex"></h1>
                    <button id="botonPelicula2" class="button botonCarousel"><strong>Ver ahora</strong></button>
                </div>
            </div>

            <div class="carousel-item">
                <img src="" alt="" id="serie1Carousel">
                <div class="carousel-caption text-start">
                    <h1 id="tituloSerie1Carousel" class="tituloCarouselIndex"></h1>
                    <button id="botonSerie1" class="button botonCarousel"><strong>Ver ahora</strong></button>
                </div>
            </div>

            <div class="carousel-item">
                <img src="" alt="" id="serie2Carousel">
                <div class="carousel-caption text-start">
                    <h1 id="tituloSerie2Carousel" class="tituloCarouselIndex"></h1>
                    <button id="botonSerie2" class="button botonCarousel"><strong>Ver ahora</strong></button>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Peliculas populares-->
    <div id="divTituloPeliculasPopulares">
        <h3 id="TituloPeliculasPopulares">Peliculas populares</h3>
    </div>
    <!-- Swiper (Carousel secundario de peliculas populares)-->
    <div class="flex-container-Swipper">
        <div class="containerSwipper">
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-container mySwiper">
                <div class="swiper-wrapper">

                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid containerImgSimpson">
        <div class="columnaCentral">
            <img src="../images/SimpsonBienv.png" alt="">
        </div>
    </div>

    <!-- Series populares -->
    <div id="divTituloTopSeries">
        <h3 id="TituloTopSeries">Series del momento</h3>
    </div>
    <div id="container-TopSeries">

    </div>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="../javascript/responsiveSwiper.js"></script>
    <script src="../javascript/global.js"></script>
    <script src="../javascript/index.js"></script>
</body>