<body id="bodyPerfilUsuario">

    <div class="containerPerfilGeneral m-4 ">
        <div class="row rowPerfilGeneral">
            <div class="col col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 col-xxl-6 colImgAvatar">
                <img class="imgAvatar" src="" alt="">
                <div id="containerPencil" data-bs-toggle="modal" data-bs-target="#modalElegirAvatar">
                    <svg xmlns="http://www.w3.org/2000/svg" id="pincelEditarPerfil" width="16" height="16"
                        fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path
                            d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg>
                </div>
            </div>
            <div class="col col-0 col-sm-0 col-md-6 col-lg-6 col-xl-6 col-xxl-6 colTextoPerfil">
                <h6 class="tituloNombreDeUsuario"> Nombre de usuario</h6>
                <h1 class="nombreUserPerfil"></h1>
                <div class="row">
                    <div class="col colNombrePefil">
                        <h6 class="tituloDatosPersonales"> Nombre</h6>
                        <h3 class="mt-3 nombrePerfil"></h3>
                        <h3 class="apellidosPerfil"></h3>
                    </div>
                    <div class="col">
                        <h6 class="tituloTotalValoraciones">Items valorados</h6>
                        <h2 id="numeroItemsValorados" class="text-light">0</h2>
                    </div>
                    <div class="col">
                        <h6 class="tituloMediaValoraciones">Valoracion media</h6>
                        <h2 id="valoracionMediaDelUsuario" class="text-light">0</h2>
                    </div>
                </div>
                <div class="row rowBotonesListas">
                    <div class="col d-grid">
                        <button type="button" id="btnListaValoraciones" class="btn btn-primary btn-listasPerfil">Lista
                            Valoraciones</button>
                    </div>
                    <div class="col d-grid">
                        <button type="button" id="btnListaSeguimiento" class="btn btn-primary btn-listasPerfil">Lista
                            Seguimiento</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="containerListas">

        <div id="containerSobreMiGeneral">

            <div class="text-center p-2">
                <h4 id="tituloEstadisticasPerfil"><strong>Estadisticas</strong> </h4>
            </div>

            <div id="containerSobreMi">
                <div id="cardMediaPeliculas" class="cardMediasSobreMi">
                    <div class="tituloCard text-light">
                        <h5>Peliculas</h5>
                    </div>
                    <div class="contenidoCard">

                        <div class="porcent">
                            <svg id="svgCirculo">
                                <circle cx="70" cy="70" r="70" />
                                <circle id="circuloMarcaPeliculas" cx="70" cy="70" r="70" />
                            </svg>
                            <div class="number">
                                <h2 id="mediaValoracionesPeliculas"><span
                                        class="fa fa-star estrellaPuntuacionMedia"></span></h2>
                            </div>
                        </div>
                        <div>
                            <p class="textoTotalItemValorados"> <strong> Peliculas valoradas:</strong> <span
                                    id="numeroPeliculasValoradas"></span></p>
                        </div>
                    </div>
                </div>
                <div id="cardMediaSeries" class="cardMediasSobreMi">
                    <div class="tituloCard text-light">
                        <h5>Series</h5>
                    </div>
                    <div class="contenidoCard">
                        <div class="porcent">
                            <svg id="svgCirculo">
                                <circle cx="70" cy="70" r="70" />
                                <circle id="circuloMarcaSeries" cx="70" cy="70" r="70" />
                            </svg>
                            <div class="number">
                                <h2 id="mediaValoracionesSeries"><span
                                        class="fa fa-star estrellaPuntuacionMedia"></span></h2>
                            </div>
                        </div>
                        <div>
                            <p class="textoTotalItemValorados"><strong> Series valoradas:</strong> <span
                                    id="numeroSeriesValoradas"></span></p>
                        </div>
                    </div>
                </div>
                <div id="cardTotal" class="cardMediasSobreMi">
                    <div class="tituloCard text-light">
                        <h5>Total</h5>
                    </div>
                    <div class="contenidoCard">
                        <div class="porcent">
                            <svg id="svgCirculo">
                                <circle cx="70" cy="70" r="70" />
                                <circle id="circuloMarcaTotal" cx="70" cy="70" r="70" />
                            </svg>
                            <div class="number">
                                <h2 id="mediaTotal"><span class="fa fa-star estrellaPuntuacionMedia"></span></h2>
                            </div>
                        </div>
                        <div>
                            <p class="textoTotalItemValorados"> <strong> Total valoraciones:</strong> <span
                                    id="numeroTotalValoradas"></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="padreContainerPeliYSerieFav">
            <div class="containerPeliYSerieFav">
                <div id="containerImgMejorPelicula">

                </div>

                <div id="containerImgMejorSerie">

                </div>
            </div>
        </div>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="modalElegirAvatar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Elige tu avatar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img src="../images/avatar1.png" alt="avatar1" id="avatar1">
                    <img src="../images/avatar2.png" alt="avatar2" id="avatar2">
                    <img src="../images/avatar3.png" alt="avatar3" id="avatar3">
                    <img src="../images/avatar4.png" alt="avatar4" id="avatar4">
                    <img src="../images/avatar5.png" alt="avatar5" id="avatar5">
                    <img src="../images/avatar6.png" alt="avatar6" id="avatar6">
                    <img src="../images/avatar7.png" alt="avatar7" id="avatar7">
                    <img src="../images/avatar8.png" alt="avatar8" id="avatar8">
                    <img src="../images/avatar9.png" alt="avatar9" id="avatar9">
                    <img src="../images/avatar10.png" alt="avatar10" id="avatar10">
                    <img src="../images/avatar11.png" alt="avatar11" id="avatar11">
                    <img src="../images/avatar12.png" alt="avatar12" id="avatar12">
                    <img src="../images/avatar13.png" alt="avatar13" id="avatar13">
                    <img src="../images/avatar14.png" alt="avatar14" id="avatar14">
                    <img src="../images/avatar15.png" alt="avatar15" id="avatar15">
                </div>
                <button type="button" class="btn btn-primary btnGuardarAvatar"> Guardar</button>
            </div>
        </div>
    </div>

    <script src="../javascript/global.js"></script>
    <script src="../javascript/perfil.js"></script>
</body>